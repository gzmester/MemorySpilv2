<Application x:Class="MemorySpil.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Simple converters til at styre kort farver -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Du kan lave disse som simple converters senere -->
        <SolidColorBrush x:Key="MatchedColor" Color="LightGreen"/>
        <SolidColorBrush x:Key="NormalColor" Color="LightBlue"/>
    </Application.Resources>
</Application>